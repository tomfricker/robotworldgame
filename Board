import java.awt.Color;
import java.awt.Component;
import java.awt.GridLayout;

import javax.swing.JFrame;
import javax.swing.JPanel;

public class Board {

	private JFrame frame;
	private JPanel squares[][] = new JPanel[6][6];
	private Character robot = new Character();

	public Board() {
		
		//create the Frame and the gridboard
	    frame = new JFrame("ChessBoard");
	    frame.setSize(700, 700);
	    frame.setLayout(new GridLayout(6, 6));
	    
	    //set the separate grids back and white
	    for (int i = 0; i < 6; i++) {
	        for (int j = 0; j < 6; j++) {
	            squares[i][j] = new JPanel();

	            if ((i + j) % 2 == 0) {
	                squares[i][j].setBackground(Color.blue);
	            } 
	            else {
	                squares[i][j].setBackground(Color.white);
	            }   
	            frame.add(squares[i][j]);
	        }
	    }
	       
	       //set the frame to close on exit, set visibility 
	       frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
	       frame.setLocationRelativeTo(null);
	       frame.setVisible(true);
	    }
	
	public void addCharacter(Character c) {
		frame.add(c);
	}
	
}
